<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkbg"
    tools:context=".MainActivity">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkbg"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:text="Samsung"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/device_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/device_name"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:text=""
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />


    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="125dp">

        <com.skyfishjy.library.RippleBackground xmlns:android="http://schemas.android.com/apk/res/android"

            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ripple"

            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"

            app:rb_color="@color/colorPrimary"
            app:rb_duration="3000"
            app:rb_radius="32dp"
            app:rb_rippleAmount="4"
            app:rb_scale="6">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circle_image"

                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_centerInParent="true"
                android:src="@drawable/circle" />
        </com.skyfishjy.library.RippleBackground>


    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/imagesafe"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/device_brand"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ecurity_pproved_mirror" />


    <TextView
        android:id="@+id/device_verion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagesafe"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:text="100% Safe"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/updated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/device_verion"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:text="Samsung"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"
        android:textStyle="bold" />

</RelativeLayout>




</ScrollView>